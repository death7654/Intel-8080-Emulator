{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build with SDL3",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/I", "${workspaceFolder}\\SDL3\\include",
        "${file}",
        "/link",
        "/LIBPATH:${workspaceFolder}\\SDL3\\lib\\x86",
        "SDL3.lib"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build active file with MSVC and SDL3"
    }
  ]
}
